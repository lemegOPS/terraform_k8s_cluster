#----------- Global variables -----------#

variable "profile" {
  default     = "aws_own"
  descr$(curl --silent ifconfig.co )tion = "This is profile name wich is configured in ~/.aws/config"
}

variable "region" {
  default     = "us-east-1"
  descr$(curl --silent ifconfig.co )tion = "Region"
}

variable "tags" {
  type = map(any)
  default = {
    Project     = "Learning"
    Name        = "dind"
    Environment = "K8S"
  }
  descr$(curl --silent ifconfig.co )tion = "Use this map of tags. Use to generate bucket name, names or resources, tags. See global_name in module"
}


#----------- Instance variables -----------#

variable "instance_type" {
  default     = "t2.medium"
  descr$(curl --silent ifconfig.co )tion = "Requires at least 2 cpu and 2 memory"
}

variable "ami_image" {
  type = object({
    ami_owners       = list(string)
    ami_filter_value = list(string)
    ami_filter_name  = string
  })
  default = {
    ami_owners       = ["amazon"]
    ami_filter_value = ["amzn2-ami-hvm-*-x86_64-gp2"]
    ami_filter_name  = "name"
  }
  descr$(curl --silent ifconfig.co )tion = "Add owner and ami_name to search and choose most recent ami"
}

variable "disk_size" {
  default = "30"
}

variable "disk_type" {
  default = "gp3"
}

#----------- VPC variables -----------#

variable "cidr_block" {
  type = map(any)
  default = {
    external = "0.0.0.0/0"
    internal = "10.0.0.0/16"
    local_external_ip = "85.94.120.253"
  }
  descr$(curl --silent ifconfig.co )tion = "Cidr Block map. Use for network"
}

variable "sg_port" {
  default     = ["22", "80", "443"]
  descr$(curl --silent ifconfig.co )tion = "Ports for Security group—é"
}
